{
  "name": "danboget",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "async": "^2.5.0",
    "axios": "^0.16.2",
    "classnames": "^2.2.5",
    "node-sass-chokidar": "^0.0.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "react-scripts": "1.0.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "yarn run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "make-production":
      "mkdir -p production/public && cp -r build/* production/public && cp backend/app.js production/ && cp -r backend/node_modules production/"
  },
  "proxy": {
    "/api": {
      "target": {
        "host": "localhost",
        "protocol": "http:",
        "port": 8080
      }
    }
  }
}
